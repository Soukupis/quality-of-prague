# Quality of Prague Dashboard - Environment Configuration
# Copy this file to .env and customize the values for your environment

# === DEVELOPMENT SETTINGS ===
# Set to true for development mode (auto-reload, detailed errors)
DEBUG=false

# Server configuration
HOST=127.0.0.1
PORT=8050

# === DATA & CACHING ===
# Cache timeout in seconds (300 = 5 minutes)
CACHE_TIMEOUT=300
CACHE_TYPE=SimpleCache

# Data directory path
DATA_DIR=data

# === UI THEMING ===
# Bootstrap theme options: BOOTSTRAP, CERULEAN, COSMO, CYBORG, DARKLY, FLATLY,
# JOURNAL, LITERA, LUMEN, LUX, MATERIA, MINTY, MORPH, PULSE, QUARTZ, SANDSTONE,
# SIMPLEX, SKETCHY, SLATE, SOLAR, SPACELAB, SUPERHERO, UNITED, VAPOR, YETI, ZEPHYR
BOOTSTRAP_THEME=CYBORG

# App branding
APP_TITLE=Quality of Prague
APP_DESCRIPTION=Prague Quality of Life Dashboard

# === PRODUCTION SETTINGS (uncomment for production) ===
# DEBUG=false
# HOST=0.0.0.0
# PORT=80
# CACHE_TYPE=RedisCache
# CACHE_REDIS_URL=redis://localhost:6379/0
